#!/bin/bash
set -e

srcs=$1
y=$2
m=$3

tmp=$(mktemp -d)
trap "rm -rf $tmp" EXIT

while read url fmt kind y m; do
  echo "fetching $url" >&2
  wget -qO - "$url" | pv | kecs-fmt -z "$fmt" -e "$kind" > "$tmp/$kind.csv";
done <<<"$(grep "$y $m" "$srcs")"

exec 0<<< "$(kecs-sort $tmp/*)"

# TODO: figure out where the blank lines are coming from
grep -v -e '^$'